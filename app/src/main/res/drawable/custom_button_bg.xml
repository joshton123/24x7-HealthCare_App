<!-- res/drawable/custom_button_bg.xml -->

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#0D2B13" /> <!-- Change this color as per your design -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape>
            <solid android:color="#1D431F" /> <!-- Change this color as per your design -->
            <corners android:radius="8dp" />
        </shape>
    </item>

</selector>
