<!-- res/drawable/custom_edittext_bg.xml -->

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Focused state -->
    <item android:state_focused="true">
        <shape>
            <solid android:color="#E8E8E8" /> <!-- Change this color as per your design -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Change this color as per your design -->
            <corners android:radius="8dp" />
        </shape>
    </item>

</selector>
